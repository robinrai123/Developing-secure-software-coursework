
<html>
    <head>
        <meta charset="utf-8">
        <title>Blog</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    </head>
    <body>
    <div class="navbar navbar-default navbar-static-top" roles="navigation">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">Blog</a>
            </div>
            <form action="/search" method="post">
                <input type="text" name="searchterm" placeholder="Search...">
                <input type="submit" value="Search">
            </form>
            </div>
        </div>
    </body>
</html>

<div class="container">

   <div class="container">
        <% if(verified) { %>
            <ul class="nav justify-content-end">
                <li class="nav-item active">
                  <a class="nav-link" style="color: blue" href="/logout"> Logout <span class="sr-only">(current)</span></a>
                  <a class="nav-link" style="color: blue" href="/createPost"> Create Post <span class="sr-only">(current)</span></a>
                  <a class="nav-link" style="color: blue" href="/account"> Account <span class="sr-only">(current)</span></a>
                  <p>Logged in: <%=username%></p>
                </li>
              </ul>
        <% } else { %>
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a href="/login">Login</a>
                    <a href="/register">Sign Up</a>
                </li>
            </ul>
        <% } %>
       <div class="row">
           <div class="col-8 d-grid gap-2">

               <h5>Account Name</h5>

        <% posts.forEach(post=> { %>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><%=post.title%> - Posted By <%=post.creator%></h5>
                    <h6 class="card-text"><%=post.content%></h6>
                </div>
            </div>
        <% }); %>

           </div>
           <div class="col-4 card-text-center">

           </div>
       </div>
   </div>


<%- include('_footer'); -%>